{%extends file='common/layout.phtml'%}
{%block name='content'%} 
	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog  modal-lg">
					<div class="modal-content"> 
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
			<!-- /.modal -->
			<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<!-- BEGIN PAGE HEADER-->
			<h3 class="page-title">
			  {%$action%}话题 <small>reports & statistics</small>
			</h3>
			<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<i class="fa fa-home"></i>
						<a href="/admin">Home</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<i class="fa fa-home"></i>
						<a href="/admin/sight">话题管理</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="#">{%$action%}话题</a>
					</li>
				</ul>
			</div>
			<!-- END PAGE HEADER-->
			<!-- BEGIN content STATS --> 
		     <div class=" form">
                  <form class="cmxform form-horizontal tasi-form" id="Form" method="post" action="" novalidate="novalidate" >
                    {%if isset($post.id)%}
                    <input type="hidden" name="id" id="id" value="{%$post.id%}"/>
                    {%/if%}
                  	
                      <div class="form-group ">
                          <label for="content" class="control-label col-lg-2">主标题*</label>
                          <div class="col-lg-5">
                              <input class="form-control" id="content" name="content" minlength="2" type="text" required="" value="{%if isset($post.content)%}{%$post.content%}{%/if%}"><label for="content" class="error"></label>
                          </div>
                      </div>
                      <div class="form-group ">
                          <label for="title" class="control-label col-lg-2">副标题*</label>
                          <div class="col-lg-5">
                              <input class="form-control" id="title" name="title" minlength="2" type="text" required="" value="{%if isset($post.title)%}{%$post.title%}{%/if%}"><label for="title" class="error"></label>
                          </div>
                      </div>
                       <div class="form-group ">
                          <label for="desc" class="control-label col-lg-2">补充描述</label>
                          <div class="col-lg-5">
                               <textarea class="form-control" id="desc" name="desc" rows="5">{%if isset($post.desc)%}{%$post.desc%}{%/if%}</textarea><label for="desc" class="error"></label>
                          </div>
                      </div>  
                      <div class="form-group ">
                          <label for="sight_name" class="control-label col-lg-2">所属景点*</label>
                          <div class="col-lg-3"> 
                               <input class="form-control" id="sight_name" name="sight_name"  type="text" required=""  autocomplete="off" value="{%if isset($post.sight_name)%}{%$post.sight_name%}{%/if%}" placeholder="输入后请在下拉框选择"/> 
                               <label for="sight_name" class="error"></label>
                          </div>
                           <div class="col-lg-3">
                           	 <div class="alert alert-info" role="alert" id="sight_alert">
                               
                             </div>
                           </div>  
                      </div>
                      <div class="form-group ">
                          <label for="sight_name" class="control-label col-lg-2">贴标签*</label>
                          <div class="col-lg-5"> 
                               <select multiple="multiple" class="multi-select" id="tags" name="tags[]" >
                                   {%foreach $tagList as $key=>$item%}
                                     <option value="{%$item.id%}" {%if isset($item.selected)%}selected{%/if%} >{%$item.name%}</option>
                                   {%/foreach%} 
                              </select>
                           </div>  
                      </div>
                       <div class="form-group ">
                          <label for="xy" class="control-label col-lg-2">坐标*</label>
                          <div class="col-lg-5">
                              <input  id="x" name="x"  type="hidden" value="{%if isset($post.x)%}{%$post.x%}{%/if%}">
                              <input  id="y" name="y"  type="hidden" value="{%if isset($post.y)%}{%$post.y%}{%/if%}">
                              <input class="form-control" id="xy"  type="text" required="" readonly="readonly" value="{%if isset($post.name)%}{%$post.x%},{%$post.y%}{%/if%}"><label for="xy" class="error"></label>  
                           </div>
                           <div class="col-lg-5"> 
                          <button type="button"  class="btn btn-success" id="position">
                               	<i class="fa fa-map-marker  fa-3x"></i>点我定位</button>
                          </div> 
                      </div>
                      <div class="form-group"> 
                          <label for="" class="control-label col-lg-2">背景图片</label>
                          <div class="col-md-9">
                              <div class="fileupload fileupload-new" data-provides="fileupload">
                                  <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                      <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                                  </div>
                                  <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"> 
                                  </div>
                                  <div id="imageView" class="imageView thumbnail {%if isset($post.image)%}imagedis{%/if%}" style="max-width: 200px; max-height: 150px; line-height: 20px;"> 
                                    {%if isset($post.image)%} 
                                    <img src="{%$webroot%}/pic/{%$post.image%}.jpg" alt="">
                                    {%/if%}
                                  </div>
                                  <div>
                                   <span class="btn btn-white btn-file">
                                   <span class="fileupload-new"><i class="fa fa-paper-clip"></i> 选择文件</span>
                                   <span class="fileupload-exists"><i class="fa fa-undo"></i> 换一张</span>
                                   <input type="file" class="default" name="file" id="imageBtn" />
                                   <input type="hidden" name="image" id="image" value="{%if isset($post.image)%}{%$post.image%}{%/if%}" />
                                   </span>
                                    <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash"></i> 移除</a>
                                    <button id="upload-img" class="btn btn-success fileupload-exists" data-dismiss="fileupload"><i class="fa fa-cloud-upload"></i> 上传</button>
                                  </div>
                              </div> 
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-lg-offset-2 col-lg-10">
                              <button class="btn btn-danger" type="submit" id="">保存</button>
                               {%if isset($post.id)%} 
                                 <a class="btn btn-default"  href="/admin/sight">返回列表</a> 
                                {%else%}
                                <button class="btn btn-default"  name="reset"  type="reset">重置</button> 
                                {%/if%}
                              
                          </div>
                      </div>
                  </form>
              </div>
			<!-- END content STATS -->
		</div>
	</div>

{%/block%}
{%block name='script'%} 
<script src="http://webapi.amap.com/maps?v=1.3&key=f102b992de0917e82f23af99e4a69a5e" type="text/javascript" ></script> 
<script src="{%$feroot%}s/global/plugins/datatables/media/js/jquery.dataTables.js" type="text/javascript"></script> 
 <link href="{%$feroot%}s/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" type="text/css"/> 
<script src="{%$feroot%}s/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js" type="text/javascript"></script> 
<script src="{%$feroot%}s/global/plugins/typeahead/bootstrap-typeahead.js" type="text/javascript"></script> 
<script src="{%$feroot%}s/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script> 
 <link href="{%$feroot%}s/global/plugins/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" type="text/css"/> 
<script src="{%$feroot%}s/global/plugins/bootstrap-fileupload/bootstrap-fileupload.js" type="text/javascript"></script>
<script src="{%$feroot%}s/global/plugins/jquery-multi-select/js/jquery.multi-select.js" type="text/javascript"></script>
<link href="{%$feroot%}s/global/plugins/jquery-multi-select/css/multi-select.css" rel="stylesheet" type="text/css"/>  
<script src="{%$feroot%}s/global/plugins/ajaxfileupload.js" type="text/javascript"></script>

<script src="{%$feroot%}s/admin/topic/edit.js" type="text/javascript"></script> 

 
{%/block%}